{
    "env": {
        "es6": true,
        "node": true
    },
    "settings": {
        "import/resolver":{
            "node":{
                "extensions":[".js",".ts"]
            }
        }
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics":"readonly",
        "SharedArrayBuffer":"readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        //"@typescript-eslint/rule-name": "error",
        "linebreak-style":"off",
        "arrow-parens":"off",
        "comma-dangle":"off",
        "spaced-comment": "off",
        "object-curly-newline": "off",
        "import/extensions": "off"    
    }
}
